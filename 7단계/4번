#include <stdio.h>
#include<string.h>
#include<malloc.h>
#pragma warning(disable:4996)

int main()
{
   int n,m;

   scanf("%d", &n);
   

   for(int i=0;i<n;i++)
   {
      char buffer[20];
      scanf("%d %s", &m,buffer);



      for (int j = 0; j < strlen(buffer); j++)
      {
         for (int z = 0; z < m; z++)
         {
            printf("%c", buffer[j]);
         }
      }
      printf("\n");
   }


   return 0;
}
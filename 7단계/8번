#include <stdio.h>
#include<string.h>
#include<ctype.h>
#include<malloc.h>
#pragma warning(disable:4996)

int compare(char* s, char c);

int main()
{
   char alph[] = "x x x ABC DEF GHI JKL MNO PQRS TUV WXYZ x";
   char* dial[13];

   char* token;
   token = strtok(alph, " ");
   int i = 0;
   dial[i] = token;
   i++;

   while (token != NULL)
   {
      token = strtok(NULL, " ");
      dial[i] = token;
      i++;
   }



   char input[16];

   scanf("%s", input);
   int a = strlen(input);
   int sum = 0;
   
   int j;
   for (j = 0; j < a; j++)
   {
      for (int z = 0; z < 13; z++)
      {
         if (compare(dial[z], input[j]) == 0)
         {
            sum += z;
            break;
         }
      }
   }

   printf("%d", sum);

   return 0;
}


int compare(char *s, char c)
{
   int n = strlen(s);

   for (int i = 0; i < n; i++)
   {
      if (s[i]==c)
      {
         return 0;
      }
   }

   return 1;
}